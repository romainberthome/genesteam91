<% include ./partials/header %>



<div class="container fh--container landing--conexion">
    <div class="row">
        <div id="landing-header">
            <h1>Bienvenue sur le site de la Genesteam 91!</h1>
        </div>
        <ul class="slideshow">
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
        </ul>
    </div>
</div>

<div class="container-fluid home--section-events">
    <div class="row">
        <div class="col-sm-12 home--section--title">
            <h2>LES EVENEMENTS</h2>
            <p>Dans cette rubrique découvrez tous les derniers évènements de la Genesteam, incluant article, photos et vidéos</p>
        </div>
        <div class="row">
            <% events.forEach(function(events){ %>
            <div class="col-lg-4">
                <div class="home--event--image" style="background:url(<%= events.image %>)">
                <div class="caption">
                    <a href="#">
                    <h3><%= events.title %></h3>
                    <p><%- events.description.substr(0, 100) %> ...</p>
                    </a>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-sm-12 home--section--title">
            <h2>LES MEMBRES</h2>
        </div>
        <% users.forEach(function(users){ %>
        <div class="col-xs-4 col-md-2">
            <div class="home--profil--center">
                <img class="img-responsive home--profil--image" src="<%= users.image %>"></img>
                <h3><%= users.username %></h3>
                <i class="glyphicon glyphicon-lock"></i> <p class="profil--element"><%= users.company %></p></br>
                <i class="glyphicon glyphicon-map-marker"></i> <p class="profil--element"><%= users.location %></p>
            </div>
        </div>
        <% }) %>
    </div>
</div>

<% include ./partials/footer %>