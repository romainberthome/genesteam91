<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div style="width:30%; margin: 25px auto;">
            <form action="/sports/<%= sports._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" value="<%= sports.title %>" name="sport[title]">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" value="<%= sports.image %>" name="sport[image]">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" value="<%= sports.edition %>" name="sport[edition]">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" value="<%= sports.etape %>" name="sport[etape]">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" value="<%= sports.description %>" name="sport[description]">
                </div>
                <div class="form-group">
                    <button class="btn btn-large btn-primary btn-block">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>