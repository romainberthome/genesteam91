<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h2 class=text--center>Modifier <%= sports.title %></h2>
        <div style="width:30%; margin: 25px auto;">
            <form action="/sports/<%= sports._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label>Titre</label>
                    <input type="text" class="form-control" value="<%= sports.title %>" name="title">
                </div>
                <div class="form-group">
                    <label>Image</label>
                    <input type="text" class="form-control" value="<%= sports.image %>" name="image">
                </div>
                <div class="form-group">
                    <label>Ann√©e</label>
                    <input type="text" class="form-control" value="<%= sports.edition %>" name="edition">
                </div>
                <div class="form-group">
                    <label>Etape</label>
                    <input type="text" class="form-control" value="<%= sports.etape %>" name="etape">
                </div>
                <div class="form-group">
                    <label>Video</label>
                    <input type="text" class="form-control" value="<%= sports.video %>" name="video">
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <input type="text" class="form-control" value="<%= sports.description %>" name="description">
                </div>
                <label>Classement</label>
                <div class="form-group">
                    <div class="input-group">
                    <span class="input-group-addon" id="sizing-addon2">1</span>
                    <input type="text" class="form-control" value="<%= sports.classement.premier %>" name="classement[premier]">
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                    <span class="input-group-addon" id="sizing-addon2">2</span>
                    <input type="text" class="form-control" value="<%= sports.classement.deuxieme %>" name="classement[deuxieme]">
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                    <span class="input-group-addon" id="sizing-addon2">3</span>
                    <input type="text" class="form-control" value="<%= sports.classement.troisieme %>" name="classement[troisieme]">
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                    <span class="input-group-addon" id="sizing-addon2">4</span>
                    <input type="text" class="form-control" value="<%= sports.classement.quatrieme %>" name="classement[quatrieme]">
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                    <span class="input-group-addon" id="sizing-addon2">5</span>
                    <input type="text" class="form-control" value="<%= sports.classement.cinquieme %>" name="classement[cinquieme]">
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                    <span class="input-group-addon" id="sizing-addon2">6</span>
                    <input type="text" class="form-control" value="<%= sports.classement.sixieme %>" name="classement[sixieme]">
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                    <span class="input-group-addon" id="sizing-addon2">7</span>
                    <input type="text" class="form-control" value="<%= sports.classement.septieme %>" name="classement[septieme]">
                    </div>
                </div>
                <div class="form-group">
                    <button class="btn btn-large btn-primary btn-block">Envoyer</button>
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>