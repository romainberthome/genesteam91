<% include ../partials/header %>


<div class="container">
    <div class="row">
        <h1 style="text-align:center;">Create a new cycling event</h1>
        <div style="width:30%; margin: 25px auto;">
            <form action="/sports" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="title" name="sport[title]">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="image" name="sport[image]">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="edition" name="sport[edition]">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="etape" name="sport[etape]">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="description" name="sport[description]">
                </div>
                <div class="form-group">
                    <button class="btn btn-large btn-primary btn-block">Submit</button>
                </div>
            </form>
        </div>
        <a href="/sports" style="text-align:center;">Back</a>
    </div>
</div>




<% include ../partials/footer %>