<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="panel panel-default">
                <div class="panel-heading">Autres Ã©tapes</div>
                <div class="list-group">
                    <li class="list-group-item active">Etape 1</li>
                    <li class="list-group-item">Etape 2</li>
                    <li class="list-group-item">Etape 3</li>
                </div>
            </div>
            <div class="panel panel-default">
                <!-- Default panel contents -->
                <div class="panel-heading">Classement</div>
                <!-- Table -->
                <table class="table">
                <tr>
                    <th>#</th>
                    <th>Coureur</th>
                    <th>Points</th>
                </tr>
                <% for(var i= 0; i < 2; i ++){%>
                <% var k = 1; %>
                <% var r = ['premier', 'deuxieme']; %>
                <% var y = 2; %>
                <tr>
                    <td><%= k %></td>
                    <td><%= sports.classement.premier %></td>
                    <td><%= y %></td>
                </tr>
                <% k = k+1; %>
                <% y = y-1; %>
                
                <% } %>
                </table>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= sports.image%>"></img>
                <div class="caption-full">
                    <h4><a><%= sports.title %></a></h4>
                    <p><%= sports.description%></p>
                    <% if(currentUser && sports.author.id.equals(currentUser._id)){%>
                    <a class="btn btn-warning" href="/sports/<%= sports._id %>/edit">Edit</a>
                    <form id="delete-form" action="/sports/<%= sports._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                    <% } %>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/sports/<%= sports._id %>/comments/new">Add new comment</a>
                </div>
                <hr>
                <% sports.comments.forEach(function(comment){%>
                    <div class="row">
                        <div class="col-md-12">
                            <strong> <%= comment.author.username%> </strong>
                            <span class="pull-right">10 days ago</span>
                            <p> 
                                <%=comment.text %>
                            </p>
                            <% if(currentUser && sports.author.id.equals(currentUser._id)){ %>
                                <a class="btn btn-warning btn-xs" href="/sports/<%= sports._id %>/comments/<%= comment._id %>/edit">Edit</a>
                                <form id="delete-form" action="/sports/<%= sports._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
                                    <button class="btn btn-danger btn-xs">Delete</button>
                                </form>
                            <% } %>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>


<% include ../partials/footer %>