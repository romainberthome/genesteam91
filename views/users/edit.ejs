<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div style="width:30%; margin: 25px auto;">
            <form action="/profil/<%= users._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" value="<%= users.username %>" name="user[username]">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" value="<%= users.image %>" name="user[image]">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" value="<%= users.edition %>" name="user[company]">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" value="<%= users.location %>" name="user[location]">
                </div>
                <div class="form-group">
                    <button class="btn btn-large btn-primary btn-block">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>