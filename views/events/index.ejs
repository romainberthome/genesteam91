<% include ../partials/header %>

<div class="container">
    <div class="jumbotron">
        <h1>Events</h1>
        <p>Discover on this page all the information about our events</p>
        <a class="btn btn-primary btn-md" href="/events/new">Create a new event</a>
    </div>
    
    <div class="row">
        <% events.forEach(function(events){%>
        <div class="col-xs-6 col-md-3">
            <div class="thumbnail">
                <img src="<%= events.image %>">
                <div class="caption">
                    <h3><%= events.title %></h3>
                    <p><%= events.description %></p>
                    <p class="text--center"><a href="events/<%= events.id %>" class="btn btn-primary" role="button">DÃ©couvrir</a></p>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
</div>

