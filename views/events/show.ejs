<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="panel panel-default">
                <div class="panel-heading">Autres Ã©tapes</div>
                <div class="list-group">
                    <li class="list-group-item active">Etape 1</li>
                    <li class="list-group-item">Etape 2</li>
                    <li class="list-group-item">Etape 3</li>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= events.image%>"></img>
                <div class="caption-full">
                    <h4><a><%= events.title %></a></h4>
                    <p><%= events.description%></p>
                    <% if(currentUser && events.author.id.equals(currentUser._id)){%>
                    <a class="btn btn-warning" href="/events/<%= events._id %>/edit">Edit</a>
                    <form id="delete-form" action="/events/<%= events._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                    <% } %>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/events/<%= events._id %>/comments/new">Add new comment</a>
                </div>
                <hr>
                <% events.comments.forEach(function(comment){%>
                    <div class="row">
                        <div class="col-md-12">
                            <strong> <%= comment.author.username%> </strong>
                            <span class="pull-right">10 days ago</span>
                            <p> 
                                <%=comment.text %>
                            </p>
                            <% if(currentUser && events.author.id.equals(currentUser._id)){ %>
                                <a class="btn btn-warning btn-xs" href="/events/<%= events._id %>/comments/<%= comment._id %>/edit">Edit</a>
                                <form id="delete-form" action="/events/<%= events._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
                                    <button class="btn btn-danger btn-xs">Delete</button>
                                </form>
                            <% } %>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>


<% include ../partials/footer %>