<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h2 class=text--center>Modifier <%= events.title %></h2>
        <div style="width:30%; margin: 25px auto;">
            <form action="/events/<%= events._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label>Titre</label>
                    <input type="text" class="form-control" value="<%= events.title %>" name="event[title]">
                </div>
                <div class="form-group">
                    <label>Image</label>
                    <input type="text" class="form-control" value="<%= events.image %>" name="event[image]">
                </div>
                <div class="form-group">
                    <label>Image 2</label>
                    <input type="text" class="form-control" value="<%= events.image2 %>" name="event[image2]">
                </div>
                <div class="form-group">
                    <label>Image 3</label>
                    <input type="text" class="form-control" value="<%= events.image3 %>" name="event[image3]">
                </div>
                <div class="form-group">
                    <label>Image 4</label>
                    <input type="text" class="form-control" value="<%= events.image4 %>" name="event[image4]">
                </div>
                <div class="form-group">
                    <label>Image 5</label>
                    <input type="text" class="form-control" value="<%= events.image5 %>" name="event[image5]">
                </div>
                <div class="form-group">
                    <label>Video</label>
                    <input type="text" class="form-control" value="<%= events.video %>" name="event[video]">
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <input type="text" class="form-control" value="<%= events.description %>" name="event[description]">
                </div>
                <div class="form-group">
                    <button class="btn btn-large btn-primary btn-block">Envoyer</button>
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>